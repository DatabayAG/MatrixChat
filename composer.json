  "autoload": {
    "psr-4": {
      "ILIAS\\Plugin\\MatrixChatClient\\": "src/",
      "ILIAS\\Plugin\\MatrixChatClient\\Libs\\" : "libs/"
    },
    "classmap": ["./src", "./libs"]
